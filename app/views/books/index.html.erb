<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Author firstname</th>
      <th>Author lastname</th>
      <th>Publisher</th>
      <th>City</th>
      <th>Year</th>
      <th>Summary</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.subtitle %></td>
        <td><%= book.author_firstname %></td>
        <td><%= book.author_lastname %></td>
        <td><%= book.publisher %></td>
        <td><%= book.city %></td>
        <td><%= book.year %></td>
        <td><%= book.summary %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

